<%- include('./partials/head') %>
<%- include('./partials/header') %>

    <div class="container mt-5" style="margin-top: 7rem;">
      <div class="card shadow rounded">
        <img src="<%= image %>" class="img-fluid card-img-top" alt="post detail image">
        <div class="card-body mb-5 mx-5">
          <h1 class="text-center card-title" style="margin-top: 7rem;"><%= title %></h1>
          <div class="card-subtitle text-muted mb-5">
            <h6 class="text-center">By <strong><%= author %></strong> on <%= dateFormatted %></h6>
          </div>
          <h3 class="text-center card-content"><%= content %></h3>
        </div>
        <div class="card-body mt-5">
          <form class="row g-3 border border-2 rounded p-5 m-5 shadow" action="" method="POST">
            <h1 class="text-center">Add Comment</h1>
            <div class="mb-3">
              <label for="comment_user" class="form-label">Username</label>
              <input type="text" class="form-control" name="comment_user" id="comment_user">
            </div>
            <div class="mb-3">
              <label for="comment_content" class="form-label">Comment</label>
              <textarea class="form-control" name="comment_content" id="comment_content" rows="3"></textarea>
            </div>
            <div class="col-12">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
        </div>
        <div class="card py-5">
          <h1 class="text-center mt-5">Comments</h1>
          <% if (comments.length > 0) { %>
            <% comments.forEach(comment => { %>
              <div class="card mx-5 my-2 p-3 shadow">
                <h6 class="card-title text-muted">By <strong><%= comment.username %></strong> on <%= comment.dateFormatted %></h6>
                <p class="card-text"><%= comment.message %></p>
              </div>
            <% }) %>
          <% } else { %>
            <h6 class="text-center text-muted">There are no comments to display.</h6>
          <% } %>

        </div>
      </div>

    </div>
<%- include('./partials/footer') %>
  
